# Backend Environment Variables
# Copy this file to backend/.env and fill in your actual values

# Database - Use SQLite for testing or PostgreSQL for production
DATABASE_URL=sqlite:///./eagle_harbor.db

# Azure OpenAI - Required for AI features
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# Azure Communication Services - Required for email alerts
AZURE_COMM_CONNECTION_STRING=endpoint=https://your-comm-service.communication.azure.com/;accesskey=your-key-here
FROM_EMAIL=alerts@eagleharbormonitor.org

# Application Settings
APP_NAME=Eagle Harbor Data Center Monitor
APP_URL=https://eagleharbormonitor.org
DEBUG=False
